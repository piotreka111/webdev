
<div>
    <h1>Logowanie</h1>
    <% if(typeof errorMessage != 'undefined') { %>
        <%= errorMessage %>
    <% } %>

    <% if(typeof successMessage != 'undefined') { %>
        <%= successMessage %>
    <% } %>
    <form method="post" action="/auth/signin">
        <input type="text" name="login"/>
        <input type="password" name="password" />
        <input type="submit" />
    </form>
</div>